{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "./components/ui/*"
      ],
      "@providers/*": [
        "./store/providers/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@controllers/*": [
        "./store/controllers/*"
      ],
      "@reducers/*": [
        "./store/reducers/*"
      ],
      "@graphql/*": [
        "./graphql/*"
      ],
      "@hocs/*": [
        "./hocs/*"
      ],
      "@actions/*": [
        "./store/actions/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@store/*": [
        "./store/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
